{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "description": "Collection of TextMate grammars and themes in JSON",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "bump": "esno scripts/bump.ts",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "fetch": "esno scripts/fetch.ts && eslint . --fix",
    "fetch:force": "esno scripts/fetch.ts --force && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "play": "nr -C playground dev",
    "play:build": "nr -C playground build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.1",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.44.1",
    "@types/adm-zip": "^0.5.5",
    "@types/cson": "^7.20.3",
    "@types/js-yaml": "^4.0.9",
    "@types/json-stable-stringify": "^1.0.36",
    "@types/node": "^20.12.8",
    "@types/semver": "^7.5.8",
    "adm-zip": "^0.5.12",
    "bumpp": "^9.4.1",
    "chalk": "^5.3.0",
    "cson": "^8.4.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.1.1",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "fast-plist": "^0.1.3",
    "js-yaml": "^4.1.0",
    "json-stable-stringify": "^1.1.1",
    "jsonc-parser": "^3.2.1",
    "lint-staged": "^15.2.2",
    "octokit": "^3.2.0",
    "ofetch": "^1.3.4",
    "p-limit": "^5.0.0",
    "pnpm": "^9.0.6",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "simple-git": "^3.24.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.5.3",
    "vue-tsc": "^2.0.16",
    "yaml": "^2.4.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
