{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "Collection of TextMate grammars and themes in JSON",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "lint": "eslint . --cache",
    "prepublishOnly": "nr build",
    "bump": "esno scripts/bump.ts",
    "test": "vitest",
    "fetch": "esno scripts/fetch.ts && eslint . --cache --fix",
    "fetch:force": "esno scripts/fetch.ts --force && eslint . --cache --fix",
    "typecheck": "vue-tsc --noEmit",
    "play": "nr -C playground dev",
    "play:build": "nr -C playground build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@iconify-json/svg-spinners": "catalog:",
    "@shikijs/core": "catalog:",
    "@shikijs/engine-javascript": "catalog:",
    "@shikijs/engine-oniguruma": "catalog:",
    "@types/adm-zip": "catalog:",
    "@types/cson": "catalog:",
    "@types/js-yaml": "catalog:",
    "@types/node": "catalog:",
    "@types/semver": "catalog:",
    "@vitest/expect": "catalog:",
    "adm-zip": "catalog:",
    "bumpp": "catalog:",
    "chai": "catalog:",
    "chalk": "catalog:",
    "cson": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "esno": "catalog:",
    "fast-glob": "catalog:",
    "fast-plist": "catalog:",
    "js-yaml": "catalog:",
    "json-stable-stringify": "catalog:",
    "jsonc-parser": "catalog:",
    "lint-staged": "catalog:",
    "octokit": "catalog:",
    "ofetch": "catalog:",
    "ohash": "catalog:",
    "p-limit": "catalog:",
    "pnpm": "catalog:",
    "rimraf": "catalog:",
    "semver": "catalog:",
    "simple-git": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:",
    "yaml": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
